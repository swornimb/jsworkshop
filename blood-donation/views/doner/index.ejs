                        <table class="table">
                          <thead>
                            <tr>
                              <th>Name</th>
                              <th>Blood Group</th>
                              <th>contact</th>
                              <th>action</th>
                            </tr>
                          </thead>
                          <tbody>
                              <% bookList.forEach(function(doner){ %>
